{
  "name": "wordful",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.3.1",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "start": "node server/index.js",
    "start-dev": "concurrently \"yarn start-server\" \"yarn start-client\" --kill-others",
    "start-client": "cd client && yarn start",
    "start-server": "psql -d wordful -U api_user -f server/init.sql && cross-env NODE_ENV=development nodemon server/index.* --watch server/index/*.{ts,js}",
    "start-prod-build": "NODE_ENV=production && cd client && yarn build && serve -s build",
    "heroku-postbuild": "cd client && yarn && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md}": "prettier --write"
  }
}
